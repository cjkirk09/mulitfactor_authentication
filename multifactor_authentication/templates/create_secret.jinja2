{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
    <h1><span class="font-semi-bold">Two-Factor Authentication</span></h1>

    <h3>Create new Two-Factor secret</h3>
    <div class="myrow create-row">
        <label for="username">Username:</label>
        <input id="username" class="myinput" type="text" placeholder="Enter your username"/>
    </div>
    <div class="myrow create-row flex-end">
        <button id="generateBtn">Generate New Secret</button>
    </div>
</div>
<script>
    $(document).ready(function () {
        var submitting = false;
        $('#generateBtn').click(function () {
            var username = $('#username').val();
            if (username) {
                window.location.href = '/create/' + username;
            }
        });
    });
</script>
{% endblock content %}
